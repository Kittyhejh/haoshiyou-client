{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "types": [
      "firebase",
      "googlemaps",
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
